            cout << "La doctora te inciste nuevamente, ¿(1)Aceptas o (2)No?" << endl;
            cin >> respuesta;
        }
        if (respuesta == 1) {
            mamá = true;
            cout << "Recuerdas tu pasado, ¿irías con tu mamá? (1)NO"<<endl;    
        }
        cout << "Elige un libro (1)Phaedra (2)Triangulo de las Bermudas"<<endl;
        cin >> libro;
        cout << "Tu papá te presiona para que no te la pases en tu ordenador"<<endl;
        cout << "trabajando en tu proyecto. ¿Qué harías?" <<endl;
        cout << "(1)Tirar te sobre tu computadora, (2) Gritarle a papá." <<endl;
        cin >> respuesta;
        if (respuesta == 1){
            cout << "Tu ordenador quedo inservible, no hay proyecto publicado"<<endl;
        } else if (respuesta == 2){
            cout << "Despues de gritarle te invita a comer xd; Era una trampa,"<<endl;
            cout << "quiere que hables con la doctora, te encuentras a Colin"<< endl;
            cout << "(1)Seguir a Colin o (2) Hablar con la Doctora?"<<endl;
            cin >> respuesta;
            if (respuesta == 1){
                cout << "Colin te invita a drogarte, (1)Aceptar (2)Rechazar"<<endl;
                cin >> respuesta;
                conspiracion = true;
                cout<<"Te cuenta que esto es solo parte de un programa donde"<<endl:
                cout<<"no tienes control y alguien toma desiciones, para"<<endl;
                cout<<"demostrarlo te invita a saltar de la terraza,"<<endl;
                cout<<"¿saltaras? (1)Si (2)No"<<endl;
                cin >> respuesta;
                if (respuesta == 1) {
                    cout<<"Saltaste y moriste, el juego se publica, pero no"<<endl;
                    cout<<"obtuvo un puntuaje, juego criticado como terrible"<<endl;
                } else if (respuesta == 2) {
                    cout<<"despiertas de un sueño, tu padre espera a que"<< endl;
                    cout<<"entres a hablar con la doctora"<< endl;
                    colin=true;
                }
            }
            cout << "Hablando con ella tu protagonista se siente controlado"<<endl;
            cout << "por un ente, (1)Morderte las uñas (2)Jalarte una oreja"<<endl;
            cin >> respuesta;
            cout << "La doctora te receta unas pastillas muy ricas yummi"<<endl;
            if (conspiracion == false){
                cout<<"Te tomaras el medicamento?(1)Si (2)No"<endl;
                cin >>respuesta;
                if (respuesta==1){
                    rating = 0;
                    cout<<"El juego se publica con calif: "<<rating<<endl;
                } else if (respuesta == 2) {
                    conspiracion=true;
                }
            }
            if (conspiracion == true){
                cout<<"No te tomaste los medicamentos, tu proyecto tiene algunos"<<endl;
                cout<<"fallos y te enojas, ¿vas a (1)golpear el escritorio o"<<endl;
                cout<<"(2)destruir tu computadora?"<endl;
                cin >> respuesta;
                if (respuesta==2){
                    cout<<"Tu ordenador no sirve, no hay proyecto publicado"<<endl;
                }
                if (respuesta==1{
                    cout<<"No puedes dormir,(1)Tomar libro (2)Tomar foto"<<endl;
                    cin >> respuesta;
                    if (respuesta ==1){
                        cout<<"Ingresar el codigo: ";
                        if (mamá==true){
                            if (colin==true){
                                cout << "(1)PAC (2)TOY"<<endl;
                                cin >> respuesta;
                                if (respuesta==1) {
                                    verdad = true;
                                    cout<<"Te han observado toda tu vida"<<endl;
                                }
                            } else {
                                cout << "(1)PAX (2)TOY"<<endl;
                                cin >> respuesta;
                            }
                            if (respuesta ==2){
                                cout<<"Vuelves a recordar a tu madre, ¿desearias"<<endl;
                                cout<<"ir con ella? (1)Si(2)No"<<endl;
                                if (respuesta ==1){
                                    cout<<"Moriste en aquel accidente"<<endl;
                                }
                            }
                        }
                    }
