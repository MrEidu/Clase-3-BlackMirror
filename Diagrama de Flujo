    cin >> respuesta;
    if (respuesta == 1){
        rating = 0;
        cout << "Se ha publicado el juego con una publicacion de: " << rating << endl;
    } else if (respuesta == 2) {
        cout << "Rechazaste esta oferta, tiempo depsues vas con tu cotcora y te"<<endl;
        cout << "pregunta si quieres hablar de tu madre, (1)Aceptas (2)Rechazas"<<endl;
